<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox id="vbox" prefHeight="400" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controller.ControllerScreenTexte">
    <fx:include source="screenMenu.fxml" />
    <GridPane>
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="400" alignment="CENTER" spacing="5.0">
            <Label>Selection mot clé</Label>
            <HBox alignment="CENTER" spacing="2.0">
                <TextField fx:id="plus_area"/>
                <Button onAction="#handlerPlusButton" prefWidth="30">+</Button>
            </HBox>
            <HBox alignment="CENTER" spacing="2.0">
                <TextField fx:id="minus_area"/>
                <Button onAction="#handlerMinusButton" prefWidth="30">-</Button>
            </HBox>
            <Separator />
            <Button onAction="#handlerFileChoice">Sélectionner par fichier</Button>
            <Separator />
            <Button onAction="#handlerButtonRechercher">Rechercher</Button>
        </VBox>

        <VBox GridPane.rowIndex="0" GridPane.columnIndex="2" spacing="5.0">
            <Label>Résultats</Label>
            <TextArea fx:id="results_area" editable="true" prefHeight="380"/>
        </VBox>
    </GridPane>
</VBox>
